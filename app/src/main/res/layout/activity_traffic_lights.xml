<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Красный сигнал -->
    <ImageView
        android:id="@+id/red_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/red_light"
        android:layout_marginTop="16dp"/>

    <!-- Желтый сигнал -->
    <ImageView
        android:id="@+id/yellow_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/red_light"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yellow_light"
        android:layout_marginTop="16dp"/>

    <!-- Зеленый сигнал -->
    <ImageView
        android:id="@+id/green_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/yellow_light"
        android:layout_centerHorizontal="true"
        android:src="@drawable/green_light"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/human_icon"
        android:layout_width="108dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600dp"
        android:src="@drawable/human_moto" />

</RelativeLayout>